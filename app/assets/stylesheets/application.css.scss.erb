.clearfix:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
    
}
 
.clearfix {
    display: inline-block;
    width:100%;
}

html {
	font-family: 'Raleway', Arial;
	font-weight: 500;
	letter-spacing: 2px;
	background: /*#C0DBF3*/ #0c91c9;
}

body {
	background: none;
	color: lightgrey;
}

img {
	height: 300px;
}

.header {
	padding: 15px 25px;
}

#header_list li{
	display: inline-block;
}

#header_list li:nth-child(2),
#header_list li:nth-child(3) {
	float: right;
}

#left_cave_wall,
#right_cave_wall {
	position: fixed;
	top: -25px;
}

#left_cave_wall,
#right_cave_wall {
	width: 445px;
	height: 432px;
}

