.container h3,
.container h4 {
	text-align: center;
	padding: 5px;
}

#logo {
	height: 15px;
	float: left;
	padding-right: 10px;
}

.container {
	z-index: 12;
	background: white;
	padding: 10px;
}

#login {
	width: 500px;
	position: absolute;
	margin: 10% 30%;
}

#login button {
	margin: 0 auto;
}

.container input {
	margin: 5px;
}

.search_image {
	width: 400px;
	height: 200px;
	overflow: hidden;
	cursor: move;
	border-radius: 20px;
	-o-border-radius: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	border: 5px solid white;
}

#box_li {
	position: relative;
	padding-left: 20px;
}

#memory_drop {
	border: 5px dashed white;
	width: 400px;
	height: 200px;
  position: absolute;
  bottom: 0;
	border-radius: 20px;
	-o-border-radius: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
}

.bear {
	background: url('<%= asset_path('search_bear-04.png') %>') 0 0 no-repeat;
	background-size: 300px;
	overflow: hidden;
	width: 250px;
	height: 300px;
}

#bear_ul {
	margin: 0 auto;
	max-width: 400px;
}

#bear_ul li{	
	min-height: 330px;
	vertical-align: top;
	display: inline-block;
	height: 10px;
}

.bear_talk {
	background: white;
	height: 110px;
	width: 110px;
	padding: 10px;
	border-radius: 20px;
	-o-border-radius: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	/*-webkit-clip-path: polygon(10% 0, 100% 0%, 100% 100%, 9% 100%, 9% 69%, 0 61%, 10% 52%);
	-o-clip-path: polygon(10% 0, 100% 0%, 100% 100%, 9% 100%, 9% 69%, 0 61%, 10% 52%);
